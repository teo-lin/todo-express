{
  "name": "todo-express",
  "version": "1.2.0",
  "description": "Sandbox Todo App API built with Express",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "build:docker": "docker build --tag todo-app .",
    "start:docker": "docker run --detach --name todo-container --publish 3333:3333 --memory 4g --cpus 4 todo-app",
    "start:dev": "nodemon src/app.js",
    "start:01": "nodemon src01-FP-onDisk/app.js",
    "start:fp": "nodemon src01-FP-onDisk/app.js",
    "start:02": "nodemon src02-OOP-onDisk/app.js",
    "start:oop": "nodemon src02-OOP-onDisk/app.js",
    "start:03": "nodemon src03-OOP-inMemory/app.js",
    "start:im": "nodemon src03-OOP-inMemory/app.js",
    "debug": "nodemon --inspect=9229 src/app.js",
    "test:load": "k6 run ./k6/load.test.js",
    "test:stress": "k6 run ./k6/stress.test.js",
    "test:spike": "k6 run ./k6/spike.test.js",
    "test:endurance": "k6 run ./k6/endurance.test.js"
  },
  "author": "Teolin",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.19.2"
  }
}
